<h1><%= @space.name %></h1>

<p>
  <%= link_to 'Add Category', new_space_category_path(@space) %>,
  <%= link_to 'Download CSV', space_path(@space, format: :csv) %>
</p>

<ul>
  <% @space.categories.each do |category| %>
    <li><%= link_to category.name, [@space, category] %></li>
  <% end %>
</ul>

