<div class="cb-section">
  <div class="cb-container">
    <p>
      <%= form_tag @auth_path, method: :post do %>
        <%= button_tag 'Continue', id: 'login-button', 
          class: 'btn btn--full btn--primary btn--small' %>
      <% end %>
