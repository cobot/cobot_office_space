<div class="cb-section">
  <div class="cb-container">
    <h1><%= link_to @space.name, @space %> / <%= link_to @category.name, [@space, @category] %> / <%= @resource.name %></h1>
  </div>
</div>

<div class="cb-section">
  <div class="cb-container">
    <div class="grid grid--full tablet-grid--1of2">
      <div class="grid-cell">
        <div class="form-block form-block--wide">
          <%= form_for [@space, @category, @resource] do |f| %>
            <p>
              <%= f.label :member_cobot_id, 'Member' %>
              <%= f.select :member_cobot_id, @space.members.map {|m| [m.name, m.id] },
                {include_blank: true}, class: 'input--stretch' %>
            </p>
            <p>
              <%= f.submit 'Assign Member', class: 'btn btn--blue btn--full' %>
              <%= link_to 'Remove Resource', [@space, @category, @resource],
                method: :delete, confirm: 'Really remove this resource?', class: 'btn' %>
            </p>
          <% end %>
        </div>
      </div>
    </div>

    <p><%= link_to 'back', [@space, @category] %></p>
  </div>
</div>
