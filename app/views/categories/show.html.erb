<h1><%= link_to @space.name, @space %> / <%= @category.name %></h1>

<ul>
  <% @category.resources.each do |resource| %>
    <li>
      <%= link_to resource.name, [@space, @category, resource] %>
      <% if resource.member %>
        (<%= resource.member.name %>)
      <% end %>
    </li>
  <% end %>
</ul>

<p><%= link_to 'back', [@space] %></p>