<div class="cb-section">
  <div class="cb-container">
    <h1><%= link_to @space.name, @space %> / <%= @category.name %></h1>
  </div>
</div>

<div class="cb-section">
  <div class="cb-container">
    <p>
      <%= link_to 'Remove Category', [@space, @category], method: :delete, confirm: 'Really remove this category?',
        class: 'btn' %>
      <%= link_to 'Add Resource', [:new, @space, @category, :resource], class: 'btn btn--blue' %>
    </p>

    <p><%= @category.resources.reject(&:member_name?).size %> out of <%= @category.resources.size %> resources free.</p>

    <div class="grid grid--full tablet-grid--1of2">
      <% 2.times do |n| %>
        <div class="grid-cell">
          <%= render 'resources', resources: @category.resources.in_groups(2, false)[n],
            space: @space, category: @category %>
        </div>
      <% end %>
    </div>
    <p><%= link_to 'back', [@space] %></p>
  </div>
</div>
